
@{
    ViewBag.Title = "Input";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .mt-4 {
        margin-top: 16px;
    }
</style>
<h2>Input</h2>

<form action="Sum" class="row" id="calForm" method="post">
    <div class="col-md-6">
        <label for="inputA" class="form-label">Nhập vào a:</label>
        <input type="text" name="inputA" class="form-control" id="inputA">
    </div>
    <div class="col-md-6">
        <label for="inputB" class="form-label">Nhập vào b:</label>
        <input type="text" name="inputB" class="form-control" id="inputB">
    </div>

    <div class="col-md-12 mt-4">
        <div class="row">
            <div class="form-check col-md-1">
                <input class="form-check-input" value="sum" type="radio" name="flexRadioDefault" id="flexRadioSum">
                <label class="form-check-label" for="flexRadioSum">
                    Cộng
                </label>
            </div>
            <div class="form-check col-md-1">
                <input class="form-check-input" value="minus" type="radio" name="flexRadioDefault" id="flexRadioMinus">
                <label class="form-check-label" for="flexRadioMinus">
                    Trừ
                </label>
            </div>
            <div class="form-check col-md-1">
                <input class="form-check-input" value="multi" type="radio" name="flexRadioDefault" id="flexRadioMulti">
                <label class="form-check-label" for="flexRadioMulti">
                    Nhân
                </label>
            </div>
            <div class="form-check col-md-1">
                <input class="form-check-input" value="devide" type="radio" name="flexRadioDefault" id="flexRadioDevide">
                <label class="form-check-label" for="flexRadioMinus">
                    Chia
                </label>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <button type="submit" id="btn" class="btn btn-primary mt-4">Calculate</button>
    </div>
</form>

<script type="text/javascript">
    var calForm = document.getElementById("calForm")
    const btn = document.querySelector("#btn")
    const radiosButton = document.querySelectorAll('input[name="flexRadioDefault"]');
    for (const radioBtn of radiosButton) {
        radioBtn.addEventListener("click", () => {
            calForm.action = radioBtn.value;
        })
    }
</script>